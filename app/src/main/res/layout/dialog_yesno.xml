<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_call"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dialog_call_top"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="20dp"
        android:text="0123456789"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <Button
            android:id="@+id/btDeny"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_call_btmleft"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#157DFB"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btAccept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_call_btmright"
            android:text="Call"
            android:textAllCaps="false"
            android:textColor="#157DFB"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>
</LinearLayout>