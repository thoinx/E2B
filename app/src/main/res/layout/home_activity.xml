<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.uncommontrade.e2b.customview.CustomViewPager
        android:id="@+id/home_vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home_btn_collections"
            style="@style/HomeTab">

            <ImageView
                style="@style/HomeTabImage"
                android:src="@drawable/tab_feed" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_btn_productions"
            style="@style/HomeTab">

            <ImageView
                style="@style/HomeTabImage"
                android:src="@drawable/tab_categories" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_btn_carts"
            style="@style/HomeTab">

            <ImageView
                style="@style/HomeTabImage"
                android:src="@drawable/tab_carts" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_btn_profiles"
            style="@style/HomeTab">

            <ImageView
                style="@style/HomeTabImage"
                android:src="@drawable/tab_profiles" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
