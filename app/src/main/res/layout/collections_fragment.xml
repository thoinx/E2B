<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/TitleBar">

        <com.uncommontrade.e2b.customview.TextViewPlus
            android:text="@string/collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTitle"
            foo:customFont="fonts/Lato-Regular"
            android:layout_centerInParent="true"
            android:id="@+id/txt_collection_title" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:visibility="gone"
        android:scrollbars="none"
        android:dividerHeight="0dp"
        android:id="@+id/listview_collection" />

    <LinearLayout
        android:id="@+id/llayout_collection_fragment_progress"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pb_collections_fragment"
            android:indeterminateDrawable="@drawable/progressbar_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>