<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bgTabBottom</item>
        <item name="colorPrimaryDark">@color/bgTabBottom</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/bgTabBottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/bgTabBottom</item>
    </style>

    <style name="HomeTabImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TextTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="TextDescription">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="TextDetail">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textDetail</item>
    </style>

</resources>
